@model ContactVM



<!-- Page Header-->
<header class="masthead" style="background-image: url('assets/img/contact-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>Contact Me</h1>
                    <span class="subheading">Have questions? I have answers.</span>
                </div>
            </div>
        </div>
    </div>
</header>


<!-- Main Content-->
<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
                <div class="my-5">
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["success"]
                        </div>
                    }
                    <form asp-action="Index" method="post" asp-controller="Contact" asp-area="">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating">
                            <input class="form-control" asp-for="Name" placeholder="Enter Name..." data-sb-validations="required" />
                            <label asp-for="Name"></label>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-floating">
                            <input class="form-control" asp-for="Email" placeholder="Enter Email..." data-sb-validations="required" />
                            <label asp-for="Email"></label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-floating">
                            <input class="form-control" asp-for="Phone" placeholder="Enter Phone..." data-sb-validations="required" />
                            <label asp-for="Phone"></label>
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" asp-for="Message" placeholder="Message ..." rows="3" style="height: 12rem" data-sb-validations="required"></textarea>
                            <label asp-for="Message"></label>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <br />
                        <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>